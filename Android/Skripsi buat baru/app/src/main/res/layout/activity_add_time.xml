<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activities.addTime">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/txtTime1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:text="Waktu 1"
                android:textSize="26sp" />

            <TextView
                android:id="@+id/shTime1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_weight="0.7"
                android:textColor="@android:color/black"
                android:textSize="26sp" />

            <Button
                android:id="@+id/btn_Time1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:padding="9dp"
                android:text="Pilih Waktu"
                android:background="@android:color/transparent"
                android:textColor="@color/colorPrimary"
                android:textSize="23sp" />
        </TableRow>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@color/theme_divider"
            android:orientation="vertical">
        </LinearLayout>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/txtTime2"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textSize="26sp"
                android:text="Waktu 2"
                android:layout_weight="0.1"/>

            <TextView
                android:id="@+id/shTime2"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textSize="26sp"
                android:textColor="@android:color/black"
                android:textAlignment="center"
                android:layout_weight="0.7"/>

            <Button
                android:id="@+id/btn_Time2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="9dp"
                android:layout_weight="0.2"
                android:text="Pilih Waktu"
                android:background="@android:color/transparent"
                android:textColor="@color/colorPrimary"
                android:textSize="23sp" />
        </TableRow>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@color/theme_divider"
            android:orientation="vertical">
        </LinearLayout>

        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/txtTime3"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textSize="26sp"
                android:text="Waktu 3"
                android:layout_weight="0.1"/>

            <TextView
                android:id="@+id/shTime3"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="26sp"
                android:layout_weight="0.7"/>

            <Button
                android:id="@+id/btn_Time3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="9dp"
                android:layout_weight="0.2"
                android:text="Pilih Waktu"
                android:background="@android:color/transparent"
                android:textColor="@color/colorPrimary"
                android:textSize="23sp" />
        </TableRow>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:layout_gravity="bottom">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginTop="15dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:theme="@style/Base.Theme.Button.Red"
                android:text="Kembali" />

            <Button
                android:id="@+id/btn_addTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:theme="@style/Base.Theme.Button.Green"
                android:text="Simpan" />
        </TableRow>
    </LinearLayout>
</LinearLayout>